<h3>Welcome to PizzaShop!</h3>

<div class="row">
	<% @products.each do |p| %>
		<div class="col-md-3">
			<div>
				<%= p.title %>
			</div>
			<div>
				<img src=" <%= p.path_to_image %>" />
			</div>
			<div>
				<%= p.description %>
			</div>
			<div>
				Size: <%= p.size %> cm.
			</div>

			<div>
				Price: <%= p.price %> rub.
			</div>

			<div>
				<button class="btn btn-success btn-xs" onclick="add_to_cart(<%= p.id %>)" >Buy me!</button>
			</div>

			<br>
						

		</div>

	<% end %>
</div>
<br />
<br />

<script type="text/javascript">
	$(function() {

		update_orders_input();
		update_orders_button();

	});	
</script>

